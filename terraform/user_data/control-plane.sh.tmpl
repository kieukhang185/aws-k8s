#!/usr/bin/env bash
set -euo pipefail

POD_CIDR="${POD_CIDR}"
AWS_REGION="${AWS_REGION}"
SSM_JOIN_PARAMETER_NAME="${SSM_JOIN_PARAMETER_NAME}"
OIDC_ISSUER_URL="${OIDC_ISSUER_URL}"

SA_PRIVATE_KEY_PEM="${SA_PRIVATE_KEY_PEM}"
SA_PUBLIC_KEY_PEM="${SA_PUBLIC_KEY_PEM}"

# Basic OS prep
swapoff -a
sed -i '/ swap / s/^/#/' /etc/fstab

apt-get update -y
apt-get install -y apt-transport-https ca-certificates curl gnupg jq awscli conntrack

modprobe overlay
modprobe br_netfilter
cat <<EOF >/etc/sysctl.d/k8s.conf
net.bridge.bridge-nf-call-ip6tables = 1
net.bridge.bridge-nf-call-iptables  = 1
net.ipv4.ip_forward                 = 1
EOF
sysctl --system

# containerd
apt-get install -y containerd
mkdir -p /etc/containerd
containerd config default > /etc/containerd/config.toml
sed -i 's/SystemdCgroup = false/SystemdCgroup = true/' /etc/containerd/config.toml
systemctl enable --now containerd

# kube tools
mkdir -p /etc/apt/keyrings
curl -fsSL https://pkgs.k8s.io/core:/stable:/v1.31/deb/Release.key \
  | gpg --dearmor -o /etc/apt/keyrings/kubernetes-apt-keyring.gpg
echo "deb [signed-by=/etc/apt/keyrings/kubernetes-apt-keyring.gpg] https://pkgs.k8s.io/core:/stable:/v1.31/deb/ /" \
  > /etc/apt/sources.list.d/kubernetes.list
apt-get update -y
apt-get install -y kubelet kubeadm kubectl
apt-mark hold kubelet kubeadm kubectl

cat <<EOF >/etc/crictl.yaml
runtime-endpoint: unix:///run/containerd/containerd.sock
image-endpoint: unix:///run/containerd/containerd.sock
timeout: 10
debug: false
EOF

mkdir -p /etc/kubernetes/pki
chmod 700 /etc/kubernetes/pki

cat <<EOF >/etc/kubernetes/pki/sa.key
${SA_PRIVATE_KEY_PEM}
EOF

cat <<EOF >/etc/kubernetes/pki/sa.pub
${SA_PUBLIC_KEY_PEM}
EOF

chmod 600 /etc/kubernetes/pki/sa.key
chmod 644 /etc/kubernetes/pki/sa.pub

MASTER_IP=$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4)

# kubeadm init with OIDC enabled
mkdir -p /etc/kubernetes/kubeadm
cat <<EOF >/etc/kubernetes/kubeadm/kubeadm-config.yaml
apiVersion: kubeadm.k8s.io/v1beta3
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: "${MASTER_IP}"
  bindPort: 6443
nodeRegistration:
  criSocket: "unix:///run/containerd/containerd.sock"
---
apiVersion: kubeadm.k8s.io/v1beta3
kind: ClusterConfiguration
clusterName: "kubernetes"
kubernetesVersion: "v1.31.0"
networking:
  podSubnet: "${POD_CIDR}"
apiServer:
  extraArgs:
    # OIDC issuer served from your S3 (or other) endpoint
    service-account-issuer: "${OIDC_ISSUER_URL}"
    service-account-jwks-uri: "${OIDC_ISSUER_URL}/openid/v1/jwks"
    # use our signing key (matches JWKS)
    service-account-signing-key-file: "/etc/kubernetes/pki/sa.key"
EOF

kubeadm init --config /etc/kubernetes/kubeadm/kubeadm-config.yaml \
  | tee /root/kubeadm-init.log

# kubeconfig for ubuntu (or ec2-user, adjust if needed)
USER_NAME="ubuntu"
USER_HOME="/home/${USER_NAME}"
mkdir -p "${USER_HOME}/.kube"
cp /etc/kubernetes/admin.conf "${USER_HOME}/.kube/config"
chown -R ubuntu:ubuntu "${USER_HOME}/.kube"

mkdir -p /root/.kube
cp /etc/kubernetes/admin.conf /root/.kube/config

# Install Calico CNI
sudo -u ubuntu kubectl apply -f \
  https://raw.githubusercontent.com/projectcalico/calico/v3.28.0/manifests/calico.yaml

# Generate join command and store in SSM Parameter Store
JOIN_CMD="$(kubeadm token create --print-join-command)"
aws ssm put-parameter \
  --region "${AWS_REGION}" \
  --name "${SSM_JOIN_PARAMETER_NAME}" \
  --type String \
  --overwrite \
  --value "${JOIN_CMD}"
